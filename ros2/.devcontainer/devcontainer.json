{
    "name": "ros2_tangerin",

    "image": "ros2-yolo11:kazs",
    // ----------------------

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-iot.vscode-ros",
                "ms-toolsai.jupyter",
                "mechatroner.rainbow-csv",
                "yzhang.markdown-all-in-one"
            ]
        }
    },


	"runArgs": [
		"--name", "ros2_kazs_container",
		"--net=host",
		"--ipc=host",
        "--gpus", "all",
		"--privileged",

		"--volume=/dev:/dev",
		"--volume=/home/arch/Documents/PlatformIO/Projects/project_on_robotic:/mnt",
		
		"--env=DISPLAY=${env:DISPLAY}",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix"
	],

    "remoteUser": "root",
    "postCreateCommand": "xhost +local:docker || true"
}